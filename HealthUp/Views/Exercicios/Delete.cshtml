@model HealthUp.Models.Exercicio

@{
    ViewData["Title"] = "Apagar exercício";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";

}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <br />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Video)
            </dt>
            <dd class="col-sm-10">
                <video width="320" height="240" controls>
                    <source src="~/Ficheiros/@Model.Video" type="video/mp4">
                </video>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fotografia)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Ficheiros/@Model.Fotografia" width="100" height="100" />
            </dd>
            <dt class="col-sm-2">
                Criado por: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumAdminNavigation.NumAdminNavigation.Nome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdExercicio" />
            <input type="submit" value="Apagar" class="primary-btn" />
        </form>
    </div>
</div>

@model HealthUp.Models.Pessoa

@{
    ViewData["Title"] = "Completar perfil";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";

}


<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <br />
    <div class="row">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (HelperFunctions.IsCurrentUserSocio(Context))
                {
                    <div class="form-group">
                        <label class="control-label">Peso (kg)</label>
                        <input asp-for="Socio.Peso" required oninvalid="this.setCustomValidity('Este campo é de preenchimento obrigatório!')" oninput="this.setCustomValidity('')" class="form-control" />
                        <span asp-validation-for="Socio.Peso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Altura (cm)</label>
                        <input asp-for="Socio.Altura" required oninvalid="this.setCustomValidity('Este campo é de preenchimento obrigatório!')" oninput="this.setCustomValidity('')" class="form-control" />
                        <span asp-validation-for="Socio.Altura" class="text-danger"></span>
                    </div>
                }
                else if (HelperFunctions.IsCurrentUserProfessor(Context))
                {
                    <div class="form-group">
                        <label>Especialidade</label>
                        <input asp-for="Professor.Especialidade" required oninvalid="this.setCustomValidity('Este campo é de preenchimento obrigatório!')" oninput="this.setCustomValidity('')" class="form-control" />
                        <span asp-validation-for="Professor.Especialidade" class="text-danger"></span>
                    </div>
                }
                <button type="submit" class="primary-btn">Confirmar</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



@model HealthUp.Models.ForgotPasswordModel
@{
	ViewData["Title"] = "Mudar password";
	Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container">
	<h1>@ViewData["Title"]</h1>
	<hr />
	<br />

	<div class="row">
		<div class="col-md-4">
			<form asp-action="ForgotPasswordChange_Confirm" id="change-password-form" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label class="control-label">Password Nova</label>
					<input type="password" asp-for="Password1" class="form-control" />
					<span asp-validation-for="Password1" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label class="control-label">Confirmar Password Nova</label>
					<input type="password" asp-for="Password2" class="form-control" />
					<span asp-validation-for="Password2" class="text-danger"></span>
				</div>
				<input type="hidden" asp-for="IdPessoa" value=@(ViewBag.IdPessoa) />
				<div class="form-group">
					<input type="submit" value="Mudar password" class="primary-btn" />
				</div>
			</form>
		</div>
	</div>


</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    Layout = null;
}

<dl class="row">
    <dt class="col-sm-2">

    </dt>
    <dd class="col-sm-10">

        <div id="Resposta">
            <form data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-mode="replace"
                  data-ajax-update="#Resposta" asp-action="Responder" asp-route-Destino=@ViewBag.Destino>
                <div class="form-group">
                    <label class="control-label">Resposta</label>
                    <br>
                    <textarea rows="4" cols="50" name="Conteudo" required style="resize:none"></textarea>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="primary-btn" />
                </div>
            </form>
        </div>
    </dd>
</dl>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
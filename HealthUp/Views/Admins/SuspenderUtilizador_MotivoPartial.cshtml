<div class="row">
    <div class="col-md-4">
        <form asp-action="SuspenderUtilizador_Confirmar" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Descreva o motivo da suspensão:</label>
                <textarea name="Motivo" rows="5" cols="100"  required style="resize:none"></textarea>
                <input type="hidden" name="id" value="@ViewBag.Id" />
            </div>
            <div class="form-group">
                <input type="submit" value="Suspender" class="primary-btn" 
                       data-ajax="true"
                       data-ajax-method="GET"
                       data-ajax-confirm="Tem a certeza?"/>
            </div>
            <a style="color: #82D026;" asp-action="SuspenderUtilizador">Cancelar</a>
            <br />
            <br />
            <br />
        </form>
    </div>
</div>

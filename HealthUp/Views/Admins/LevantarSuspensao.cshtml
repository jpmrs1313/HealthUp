
@model IEnumerable<HealthUp.Models.Pessoa>

@{
    ViewData["Title"] = "Levantar Suspensão";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <br />
    <table class="content-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumCC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fotografia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telemovel)
                </th>
                <th>
                    Data de suspensão
                </th>
                <th>
                    Motivo de suspensão
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumCC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sexo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fotografia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telemovel)
                    </td>
                    @if (item.Socio != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Socio.DataSuspensao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Socio.Motivo)
                        </td>
                    }
                    @if (item.Professor != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Professor.DataSuspensao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Professor.Motivo)
                        </td>
                    }

                    <td>
                        <a asp-action="LevantarSuspensao_Selecionado" asp-route-id="@item.NumCC">Levantar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
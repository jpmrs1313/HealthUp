@model HealthUp.Models.SolicitacaoProfessor

@{
    ViewData["Title"] = "Solicitar PT";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container">
    <h1>Solicitar Personal Trainer</h1>
    <hr />
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SolicitarPT">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Professor" class="control-label"></label>
                    <select name="ProfessorEscolhido" class="form-control" asp-items="@ViewBag.Professores"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Fazer solicitação" class="primary-btn" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

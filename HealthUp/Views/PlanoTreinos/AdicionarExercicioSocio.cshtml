@model Contem
@{
    ViewData["Title"] = "Adicionar exercício ao plano de treino";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container">
    <h1>Adicionar exercício ao plano de treino</h1>
    <hr />
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AdicionarExercicioSocio">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdExercicioNavigation.Nome" class="control-label"></label>
                    <select name="ExercicioEscolhido" class="form-control" style="width:auto" asp-items="@ViewBag.Exercicios"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NumRepeticoes" class="control-label"></label>
                    <input asp-for="NumRepeticoes" class="form-control" />
                    <span asp-validation-for="NumRepeticoes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PeriodoDescanso" class="control-label"></label>
                    <input asp-for="PeriodoDescanso" class="form-control" />
                    <span asp-validation-for="PeriodoDescanso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantidadeSeries" class="control-label"></label>
                    <input asp-for="QuantidadeSeries" class="form-control" />
                    <span asp-validation-for="QuantidadeSeries" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" name="PlanoId" value="@ViewBag.PlanoId" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar" class="primary-btn" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}